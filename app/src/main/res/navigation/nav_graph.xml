<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/timetableFragment">

    <fragment
        android:id="@+id/timetableFragment"
        android:name="com.g3.TimetableFragment"
        android:label="Timetable"
        tools:layout="@layout/fragment_timetable" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.g3.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/tagsFragment"
        android:name="com.g3.TagsFragment"
        android:label="Tags List"
        tools:layout="@layout/fragment_tags" />

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.g3.AboutFragment"
        android:label="About App"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.g3.CalendarFragment"
        android:label="fragment_calendar"
        tools:layout="@layout/fragment_calendar" >
        <action
            android:id="@+id/action_calendarFragment_to_addTaskFragment"
            app:destination="@id/addTaskFragment" />
        <action
            android:id="@+id/action_calendarFragment_to_editTaskFragment"
            app:destination="@id/editTaskFragment" />
    </fragment>

    <fragment
        android:id="@+id/editTaskFragment"
        android:name="com.g3.EditTaskFragment"
        android:label="fragment_edit_task"
        tools:layout="@layout/fragment_edit_task" />

    <fragment
        android:id="@+id/addTagFragment"
        android:name="com.g3.AddTagFragment"
        android:label="Add Tag"
        tools:layout="@layout/fragment_add_tag" />

    <fragment
        android:id="@+id/editTagFragment"
        android:name="com.g3.EditTagFragment"
        android:label="Edit Tag"
        tools:layout="@layout/fragment_edit_tag" />

    <fragment
        android:id="@+id/addTaskFragment"
        android:name="com.g3.AddTaskFragment"
        android:label="fragment_add_task"
        tools:layout="@layout/fragment_add_task" />

    <fragment
        android:id="@+id/stopwatchFragment"
        android:name="com.g3.StopwatchFragment"
        android:label="Stopwatch"
        tools:layout="@layout/fragment_stopwatch" />

    <fragment
        android:id="@+id/timerFragment"
        android:name="com.g3.TimerFragment"
        android:label="Timer"
        tools:layout="@layout/fragment_timer" />

    <fragment
        android:id="@+id/tasksFragment"
        android:name="com.g3.TasksFragment"
        android:label="fragment_tasks"
        tools:layout="@layout/fragment_tasks" />

</navigation>